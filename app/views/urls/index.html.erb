<h1>Shorten your Links with PzZ</h1>
<%= link_to "Shorten Your URL", new_url_path, :class => "btn btn-large", :style => "float:right" %>

<h2>Recent Links</h2>
<table class="table table-bordered table-striped" style="margin-top:20px">
		<tr>
			<td>Original Url</td>
			<td>Shortend Url</td>
			<td># of Clicks</td>
		</tr>
<% @urls.reverse.each do |url|%>
		<tr><td><%= url.full_url%></td>
			<td><%= "#{urls_url}#{url.id}" %></td>
			<td><%= url.counter%></td>
		</tr>		
<% end %>
</table>